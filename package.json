{
  "name": "@dnsecure/email-module",
  "version": "1.0.0",
  "description": "A comprehensive NestJS email service module with templates, tracking, and queue management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "nest build",
    "build:lib": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.md\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build:lib && npm run test",
    "publish:npm": "npm publish --access public",
    "publish:beta": "npm publish --tag beta --access public",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/Migration -d src/database/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/database/migrations/Migration",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/data-source.ts",
    "db:init": "ts-node -r tsconfig-paths/register src/database/init.ts",
    "db:reset": "ts-node -r tsconfig-paths/register src/database/reset.ts",
    "db:check": "ts-node -r tsconfig-paths/register src/database/check.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seeds/index.ts",
    "templates:sync": "ts-node -r tsconfig-paths/register src/database/seeds/email-templates.seed.ts"
  },
  "keywords": [
    "nestjs",
    "email",
    "email-service",
    "nodemailer",
    "templates",
    "handlebars",
    "queue",
    "bullmq",
    "tracking",
    "analytics",
    "oauth2",
    "gmail",
    "smtp",
    "transactional-email",
    "email-marketing",
    "typescript"
  ],
  "author": {
    "name": "DN Secure",
    "email": "contact@dnsecure.com",
    "url": "https://dnsecure.com"
  },
  "contributors": [
    {
      "name": "Hoang Danh",
      "email": "danhnh.developer@gmail.com"
    }
  ],
  "license": "MIT",
  "homepage": "hhttps://github.com/danhnhdeveloper308/email-module#readme",
  "bugs": {
    "url": "https://github.com/danhnhdeveloper308/email-module/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danhnhdeveloper308/email-module.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "ARCHITECTURE.md",
    "USAGE_GUIDE.md",
    "API_DOCUMENTATION.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bullmq": "^5.51.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.1",
    "googleapis": "^148.0.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.4.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.3",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^5.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}