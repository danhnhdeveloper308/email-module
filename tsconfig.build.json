{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "test", 
    "**/*spec.ts", 
    "**/*test.ts",
    "src/main.ts",
    "src/database/seeds/**/*",
    "src/database/migrations/**/*"
  ]
}
